; labels in expressions?

write_string:
    swap
@1:
    dupl
    indir
    dupl
    beq (@2 + 3) ; there's no way this won't break hsax
    printc
    pushv   1
    add
    br  (@1)
@2:
    DS 3 ; just to cause chaos
    addsp   2
    return

hello: DW "this is a string",0

main: pushv hello
      call write_string
      pushv 10
      printc
      halt

entry main

